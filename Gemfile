  gem 'rubocop', require: false
  gem 'spring'
  gem 'yard'
  gem 'pry'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'rails-erd'
end

group :development do
  gem 'capistrano'
  gem 'request-log-analyzer'
  gem 'bullet'
end

group :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'simplecov'
  gem 'faker'
  gem 'database_cleaner'
  gem 'fuubar'
  gem 'compass'
  gem 'selenium-webdriver'
  gem 'capybara'
end



